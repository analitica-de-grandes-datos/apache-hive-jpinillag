LOAD DATA LOCAL INPATH 'data1.csv' INTO TABLE tbl1;

CREATE TABLE t1_procesada AS SELECT t1, key, value FROM tbl1 LATERAL VIEW EXPLODE(t4) List;

CREATE TABLE respuesta AS SELECT
    d.t1 as j1,
    d.key as j2,
    d.value as j3,
    t.c1 as j4,
    t.c2 as j5
FROM
    t1_procesada d
JOIN(
    SELECT
        c1,
        c2
    FROM
        tbl0
    ) t
ON
    (d.t1 = t.c1) AND (d.key = t.c2);



